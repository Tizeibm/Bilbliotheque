<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane styleClass="backgrounAnchorPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.POO.controller.BookViewController">
   <children>
      <BorderPane styleClass="backgrounAnchorPane" stylesheets="@style.css" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0">
      
          <!-- Haut -->
          <top>
              <Label text="Gestion de Bibliothèque" textFill="#e8ff00" BorderPane.alignment="CENTER">
                  <BorderPane.margin>
                      <Insets bottom="10" top="10" />
                  </BorderPane.margin>
               <font>
                  <Font size="15.0" />
               </font>
              </Label>
          </top>
      
          <!-- Centre : zone principale -->
          <center>
              <HBox>
                  <!-- Colonne gauche : ListView -->
                  <VBox spacing="10">
                      <Label style="-fx-font-weight: bold" text="Liste des Livres" textFill="WHITE" />
                      <ListView fx:id="bookListView" prefHeight="221.0" prefWidth="200">
                     <VBox.margin>
                        <Insets bottom="15.0" right="15.0" />
                     </VBox.margin>
                  </ListView>
                  <HBox.margin>
                     <Insets bottom="10.0" right="25.0" top="10.0" />
                  </HBox.margin>
                  </VBox>
         
                     <!-- Colonne centrale : Formulaire -->
                  <VBox spacing="10">
                      <Label style="-fx-font-weight: bold" text="Informations du Livre" textFill="WHITE" />
         
                         <GridPane hgap="10" vgap="10">
                          <Label text="Titre :" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                          <TextField fx:id="titleField" styleClass="champ-recherche" GridPane.columnIndex="1" GridPane.rowIndex="0" />
         
                             <Label text="Auteur :" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                          <TextField fx:id="authorField" styleClass="champ-recherche" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         
                             <Label text="Genre :" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                          <TextField fx:id="genreField" styleClass="champ-recherche" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         
                             <Label text="Hauteur :" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                          <TextField fx:id="heightField" styleClass="champ-recherche" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         
                             <Label text="Éditeur :" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                          <TextField fx:id="publisherField" styleClass="champ-recherche" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                      </GridPane>
                      <HBox alignment="CENTER_RIGHT" spacing="10">
                          <Button onAction="#AddBook" style="-fx-background-color: yellow;" text="Ajouter">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                          <Button onAction="#modifyBook" style="-fx-background-color: yellow;" text="Modifier">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                          <Button onAction="#deleteBook" style="-fx-background-color: yellow;" text="Supprimer">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                          <Button onAction="#effacerChampTexte" style="-fx-background-color: yellow;" text="Effacer la zone de texte">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                      </HBox>
                  </VBox>
              </HBox>
          </center>
      
          <!-- Bas : cartes (optionnelles) -->
          <bottom>
              <ScrollPane fitToWidth="true" prefHeight="250.0" prefWidth="800.0">
                  <FlowPane fx:id="bookContainer" stylesheets="@style.css" />
              </ScrollPane>
          </bottom>
      
      </BorderPane>
   </children>
</AnchorPane>
